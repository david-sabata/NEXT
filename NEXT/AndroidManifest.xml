<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.fit.next"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" 
            android:windowSoftInputMode="stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".backend.sync.LoginActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".backend.sync.PermissionActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <service android:name=".backend.TasksModelService"></service>
        <service android:name=".backend.sync.SyncService"></service>
        
        <!-- Widget: Broadcast Receiver that will process AppWidget updates -->
        <receiver android:name=".widget.NEXTWidget" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
			<meta-data android:name="android.appwidget.provider" 
			    	   android:resource="@xml/next_widget_provider" />
        </receiver>
        
        <activity android:name=".taskdetail.TaskEditFragment">
			<intent-filter>
				<action android:name="android.appwidget.action.ACTION_WIDGET_CONFIGURE"/>
			</intent-filter>
		</activity>
        

        <receiver android:name=".backend.sync.AlarmReceiver" />


    </application>
    
    

</manifest>
