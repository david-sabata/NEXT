<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:background="@color/FanItemsText"
    android:orientation="vertical"
    tools:context=".TaskDetailFragment" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_light" >

        <LinearLayout
            android:id="@+id/taskBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.10"
                android:orientation="vertical"
                android:padding="@dimen/TaskTittlePadding"
                android:paddingTop="@dimen/TaskTitlePaddingTop" >
                
                <EditText
                    android:id="@+id/titleTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:inputType="textMultiLine"
                    android:text="@string/TaskTitle"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskTitleSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="2.10"
                android:background="@color/TaskRuller"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskIsCompletedLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskIsCompletedTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >

                </LinearLayout>

                <CheckBox
                    android:id="@+id/editIsCompleted"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskBodyPadding"
                    android:text="Completed" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDescriptionLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskDescriptionTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <EditText
                    android:id="@+id/editDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/TaskSubTextSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDateLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_marginTop="@dimen/TaskSubBodyItemMarginTop"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/taskDateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskDateTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                        android:layout_weight="2.1"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="date" />

                    <EditText
                        android:id="@+id/editDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:inputType="date" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskProjectLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_marginTop="@dimen/TaskSubtitleMarginBoth"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/taskProjectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskProjectTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubTitlePaddingLeft" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskContextLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_marginTop="@dimen/TaskBodySubLayout"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textContextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskContextTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >

                </LinearLayout>

                <EditText
                    android:id="@+id/editContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="@dimen/TaskSubTextSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskImportantLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                android:layout_marginTop="@dimen/TaskBodySubLayout"
                android:layout_weight="2.10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textImportantTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:gravity="left"
                    android:paddingLeft="@dimen/TaskSubBodyTitlePaddingLeft"
                    android:paddingRight="5dp"
                    android:text="@string/TaskPriorityTitle"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/TaskSubtitleSize"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioPriority"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>