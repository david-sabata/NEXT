<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".TaskDetailFragment" >

    <ScrollView
        android:id="@+id/scrollView"
        style="?taskScrollView" >

        <LinearLayout
            android:id="@+id/taskBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.10"
                android:background="@color/TaskTitleBackground"
                android:orientation="vertical"
                android:padding="@dimen/TaskTittlePadding"
                android:paddingTop="@dimen/TaskTitlePaddingTop" >

                <TextView
                    android:id="@+id/titleTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskTitleBackground"
                    android:text="@string/TaskTitle"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/TaskTitleColor"
                    android:textSize="@dimen/TaskTitleSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="2.10"
                android:background="@color/TaskRuller"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskIsCompletedLayout"
                style="?taskSubLayout" >

                <TextView
                    android:id="@+id/TextView01"
                    style="?capsText"
                    android:text="@string/TaskIsCompletedTitle" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <CheckBox
                    android:id="@+id/IsCompleted"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskBodyPadding"
                    android:clickable="false"
                    android:text="Completed" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDescriptionLayout"
                style="?taskSubLayout">

                <TextView
                    android:id="@+id/taskDescriptionTitle"
                    style="?capsText"
                    android:text="@string/TaskDescriptionTitle"  />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textDescriptionShow"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:text="Fill description"
                    android:textSize="@dimen/TaskSubTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDateLayout"
                style="?taskSubLayout" >

                <TextView
                    android:id="@+id/taskDateTitle"
                    style="?capsText"
                    android:text="@string/TaskDateTitle" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textDateShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="date"
                    android:text="TextView"
                    android:textSize="@dimen/TaskSubTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskProjectLayout"
                style="?taskSubLayout" >

                <TextView
                    android:id="@+id/taskProjectTitle"
                    style="?capsText"
                    android:text="@string/TaskProjectTitle"  />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textProjectShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="@string/TaskProjectTextAutoComplete"
                    android:textSize="@dimen/TaskSubTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskContextLayout"
                style="?taskSubLayout" >

                <TextView
                    android:id="@+id/textContextTitle"
                    style="?capsText"
                    android:text="@string/TaskContextTitle"  />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textContextShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:ems="10"
                    android:inputType="text|textMultiLine"
                    android:text="@string/TaskContextTextAutoComplete"
                    android:textSize="@dimen/TaskSubTextSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskImportantLayout"
                style="?taskSubLayout">

                <TextView
                    android:id="@+id/textImportantTitle"
                    style="?capsText"
                    android:text="@string/TaskPriorityTitle"  />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:layout_marginRight="@dimen/TaskSubtitleMarginBoth"
                    android:background="@color/TaskRuller"
                    android:orientation="vertical" >
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioPriority"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/TaskSubtitleMarginBoth"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/showPriorityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>