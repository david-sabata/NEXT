	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:layout_marginLeft">@dimen/TaskSubtitleMarginBoth</item>
	        <item name="android:hint">Task title</item>
	        <item name="android:inputType">textMultiLine</item>
	        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	        <item name="android:textSize">@dimen/TaskTitleSize</item>
		</style>
		
			<style name="Next.Task.Title.ShowFragment">
