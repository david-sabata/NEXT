	<style name="Next.Task.TitleLayout">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.10</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/TaskTittlePadding</item>
        <item name="android:paddingTop">@dimen/TaskTitlePaddingTop</item>
	</style>
	
