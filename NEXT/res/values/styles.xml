<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Colors used in styles -->
   	<color name="FanBackgroundDark">#2c2c2c</color>
    <color name="FanItemsText">#FFFFFF</color>
    <color name="FanItemsBackgroundColor">#8FB5D0</color>
    <color name="FanTitleColor">#33b6ea</color>
    <color name="TaskTitleColor">#FFFFFF</color>
    <color name="TaskTitleBackground">#000000</color>
    <color name="TaskCheckBoxBackground">#FFFFFF</color>
	<color name="TaskSubtitleColor">#FFFFFF</color>
    <color name="TaskSubtitleBackground">#33b6ea</color>
    <color name="TaskRuller">#33b6ea</color>
    <color name="priority_3">#BF3000</color>
    <color name="priority_1">#93BF00</color>
    <color name="priority_2">#BF9600</color>
    
    <!-- ********************************************************** -->
    <!-- ********************************************************** -->
    <!-- ********************* SIDEBAR STYLE ********************** -->
    <!-- ********************************************************** -->
    <!-- ********************************************************** -->
	<style name="Next" parent="@style/Theme.Holo.Light.Hack">
	    
	</style>
	
	<style name="Next.Sidebar">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">match_parent</item>
	</style>
	
	<style name="Next.Sidebar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>	    
	    <item name="android:textSize">@dimen/FanTitleSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>   
        <item name="android:gravity">center_horizontal</item> 
	</style>
	
	<style name="Next.Sidebar.HorizontalLine">
	    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:orientation">vertical</item> 
	</style>
	 
	<style name="Next.Sidebar.Subtitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:clickable">True</item>
        <item name="android:drawablePadding">@dimen/FanItemDrawablePadding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/FainItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/FanItemTextSize</item>
	</style>
	<!--  ******************************************************* -->
	<!--  Style for light design - SIDEBAR ********************** -->
	<!--  ******************************************************* -->	
    <style name="Next.Light">
        
	</style>
	
    <!--  **************** SIDEBAR LIGHT ************************ -->
    <!-- Sidebar style for light -->
	    <style name="Next.Sidebar.Light">
	    	<item name="android:background">@color/FanBackgroundDark</item>
	    	<item name="android:textColor">@color/FanItemsText</item>
	    </style>
	
	    <!--  This is style for blue main titles in sidebar -->
	    <style name="Next.Sidebar.Title.Light">
	        <item name="android:textColor">@color/FanTitleColor</item>
	    </style>
	    	
	    	<!--  This is style for blue horizontal line in sidebar -->
		    <style name="Next.Sidebar.HorizontalLine.Light">
		        <item name="android:background">@color/FanTitleColor</item>
		    </style>
		    
		    <!--  This is style for subtitle text in one layout -->
		    <style name="Next.Sidebar.Subtitle.Light">
		        <item name="android:textColor">@color/FanItemsText</item>
		    </style>
		    
		    
	
	<!--  ******************************************************* -->
	<!--  Style for dark design - SIDEBAR *********************** -->
	<!--  ******************************************************* -->	
	
		    
	<!-- ********************************************************** -->
    <!-- ********************************************************** -->
    <!-- **************** TASK DETAIL (EDIT) FRAGMENT ************* -->
    <!-- ********************************************************** -->
    <!-- ********************************************************** -->   

	<!--  Main body of task fragment -->    
	<style name="Next.Task">
	    
	</style>
		
	<!-- Caps BLUE text -->
	<style name="Next.Task.Capstext">
		<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/TaskSubtitleMarginBoth</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/TaskSubBodyTitlePaddingLeft</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/TaskSubtitleSize</item>
        <item name="android:textStyle">normal</item>
	</style>
   
	<style name="Next.Task.ScrollView">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="Next.Task.SubLayout">
         <item name="android:layout_width">fill_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_marginRight">@dimen/TaskSubtitleMarginBoth</item>
         <item name="android:layout_weight">2.10</item>
         <item name="android:orientation">vertical</item>
         <item name="android:layout_marginTop">@dimen/TaskBodySubLayout</item>
	</style>
	
	<!--  ******************************************************* -->
	<!--  *** Style for light design - ONE TASK DETAIL (EDIT) *** -->
	<!--  ******************************************************* -->		
		<style name="Next.Task.Capstext.Light">
	        <item name="android:textColor">@android:color/holo_blue_light</item>
    	</style>
    	
		<style name="Next.Task.ScrollView.Light">
			<item name="android:background">@android:color/background_light</item>
		</style>    
		
		
    <!-- because of issue #922 : http://code.google.com/p/android/issues/detail?id=922 -->
    <style name="Theme.Holo.Light.Hack" parent="@android:Theme.Holo.Light">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

	

    <!--  ************************************************************ -->
    <!--  ********************** Loading Screen ********************** -->
    <!--  ************************************************************ -->
    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.Holo.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>


</resources>