    	<item name="android:layout_height">match_parent</item>
	</style>
	
	<style name="Next.Sidebar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>	    
	    <item name="android:textSize">@dimen/FanTitleSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>   
        <item name="android:gravity">center_horizontal</item> 
	</style>
	
	<style name="Next.Sidebar.HorizontalLine">
	    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:orientation">vertical</item> 
	</style>
	 
	<style name="Next.Sidebar.Subtitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:clickable">True</item>
        <item name="android:drawablePadding">@dimen/FanItemDrawablePadding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/FainItemHeight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/FanItemTextSize</item>
