	<style name="Next.Task.LineSeparatorCatagories">
	    <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/TaskSubtitleMarginBoth</item>
        <item name="android:layout_marginRight">@dimen/TaskSubtitleMarginBoth</item>
        <item name="android:orientation">vertical</item>
	</style>
	
	<!-- GENERAL CHECKBOX IF COMPLETED -->
	<style name="Next.Task.CheckboxCompleted">
        <item name="android:layout_width">123dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/TaskBodyPadding</item>
        <item name="android:clickable">false</item>
        <item name="android:text">@string/TaskCompleted</item>
	</style>
	
