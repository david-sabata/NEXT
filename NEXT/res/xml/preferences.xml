<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory 
        android:title="@string/SettingsSynchronizationTitle"
        android:key="pref_key_synchro_setting">
        <cz.fit.next.preferences.DriveLoginPreference
            android:key="PREF_ACCOUNT_NAME" 
            android:title="@string/no_account_connected" 
            android:summary="@string/connect_account" />
        <SwitchPreference 
            android:key="PREF_SYNC_ENABLED"
            android:title="@string/SettingsSynchronizationActiveTitle"
            android:summary="@string/SettingsSynchronizationActiveSummary"
            android:defaultValue="false"
            android:switchTextOff="0"
            android:switchTextOn="I"
            android:dependency="PREF_ACCOUNT_NAME"
            />
         <SwitchPreference 
            android:key="PREF_SYNC_WIFI"
            android:title="@string/SettingsSynchronizationWifiTitle"
            android:summary="@string/SettingsSynchronizationWifiSummary"
            android:defaultValue="false"
            android:switchTextOff="0"
            android:switchTextOn="I"
            android:dependency="PREF_ACCOUNT_NAME"
            />
        <ListPreference
            android:key="PREF_SYNC_INTERVAL"
            android:title="@string/SettingsSynchronizationIntervalTitle"
            android:entries="@array/preferenceIntervalEntries"
            android:entryValues="@array/preferenceIntervalValuesIndex"
            android:defaultValue="3"
            android:dependency="PREF_ACCOUNT_NAME"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/SettingsAppTitle"
        android:key="pref_key_app_setting">
        <ListPreference 
            android:key="PREF_DESIGN"
            android:title="@string/SettingsDesignTitle"
            android:entries="@array/preferenceDesignEntries"
            android:entryValues="@array/preferenceDesignValuesIndex"
            android:defaultValue="1"
            />
        <SwitchPreference 
            android:key="PREF_SHOW_COMPLETED_TASKS"
            android:title="@string/SettingsShowCompletedTasks"
            android:summary="@string/SettingsShowCompletedTasksSummary"
            android:defaultValue="true"
            android:switchTextOff="0"
            android:switchTextOn="I"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/SettingsNotificationsTitle"
        android:key="pref_key_notifications">
        <SwitchPreference 
            android:key="PREF_NOTIFICATIONS_ENABLED"
            android:title="@string/SettingsNotificationsEnable"
            android:summary="@string/SettingsNotificationsEnableSummary"
            android:defaultValue="false"
            android:switchTextOff="0"
            android:switchTextOn="I"
            />
        <cz.fit.next.preferences.AlldayTimePreference
             android:key="PREF_NOTIFICATIONS_ALLDAYTIME"
             android:title="@string/SettingsNotificationsAlldayTime"
             android:defaultValue="1"
            />
    </PreferenceCategory>
</PreferenceScreen>