<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory 
        android:title="@string/SettingsSynchronizationTitle"
        android:key="pref_key_synchro_setting">
        <SwitchPreference 
            android:key="PREF_SYNC_ENABLED"
            android:title="@string/SettingsSynchronizationActiveTitle"
            android:summary="@string/SettingsSynchronizationActiveSummary"
            android:defaultValue="on"
            android:switchTextOff="0"
            android:switchTextOn="I"
            />
        <ListPreference
            android:key="PREF_SYNC_INTERVAL"
            android:title="@string/SettingsSynchronizationIntervalTitle"/>
    </PreferenceCategory>
</PreferenceScreen>